<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <ImageView
            android:id="@+id/floor1north"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="38dp"
            android:alpha="0"
            android:contentDescription="@string/no_description"
            android:rotation="-90"
            android:scaleType="fitXY"
            android:src="@drawable/floor1north"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/floor2north"
            android:layout_width="300dp"
            android:layout_height="627dp"
            android:layout_marginEnd="38dp"
            android:alpha="0"
            android:contentDescription="@string/no_description"
            android:rotation="-90"
            android:src="@drawable/floor2north"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/floor3north"
            android:layout_width="300dp"
            android:layout_height="627dp"
            android:layout_marginEnd="38dp"
            android:alpha="0"
            android:contentDescription="@string/no_description"
            android:rotation="-90"
            android:src="@drawable/floor3north"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/floor4north"
            android:layout_width="300dp"
            android:layout_height="627dp"
            android:layout_marginEnd="38dp"
            android:alpha="0"
            android:contentDescription="@string/no_description"
            android:rotation="-90"
            android:src="@drawable/floor4north"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/floor1south"
            android:layout_width="300dp"
            android:layout_height="627dp"
            android:layout_marginEnd="38dp"
            android:alpha="0"
            android:contentDescription="@string/no_description"
            android:rotation="-90"
            android:src="@drawable/floor1south"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/floor2south"
            android:layout_width="300dp"
            android:layout_height="627dp"
            android:layout_marginEnd="38dp"
            android:alpha="0"
            android:contentDescription="@string/no_description"
            android:rotation="-90"
            android:src="@drawable/floor2south"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/floor3south"
            android:layout_width="300dp"
            android:layout_height="627dp"
            android:layout_marginEnd="38dp"
            android:alpha="0"
            android:contentDescription="@string/no_description"
            android:rotation="-90"
            android:src="@drawable/floor3south"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </RelativeLayout>

    <Button
        android:id="@+id/bfloor1north"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="100"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bfloor2north"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="200"
        app:layout_constraintStart_toEndOf="@+id/bfloor1north"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bfloor3north"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="300"
        app:layout_constraintStart_toEndOf="@id/bfloor2north"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bfloor4north"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="400"
        app:layout_constraintStart_toEndOf="@id/bfloor3north"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bfloor1south"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="150"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bfloor1north" />

    <Button
        android:id="@+id/bfloor2south"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="250"
        app:layout_constraintStart_toEndOf="@+id/bfloor1south"
        app:layout_constraintTop_toBottomOf="@+id/bfloor2north" />

    <Button
        android:id="@+id/bfloor3south"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="350"
        app:layout_constraintStart_toEndOf="@+id/bfloor2south"
        app:layout_constraintTop_toBottomOf="@+id/bfloor3north" />

    <Button
        android:id="@+id/bclear"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="CLEAR"
        app:layout_constraintStart_toEndOf="@+id/bfloor3south"
        app:layout_constraintTop_toBottomOf="@+id/bfloor4north" />

</androidx.constraintlayout.widget.ConstraintLayout>